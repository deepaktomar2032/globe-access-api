{
  "name": "globe-access-api",
  "version": "1.0.0",
  "description": "Globe Access API",
  "main": "index.js",
  "_moduleAliases": {
    "@src": "build/src"
  },
  "scripts": {
    "test": "NODE_ENV=test jest",
    "clean": "rm -rf build",
    "build": "npm run clean && tsc",
    "start:dev": "tsx watch src/index.ts",
    "start:prod": "npm run build && node build/src/index.js",
    "docker:stop": "docker stop $(docker ps -aq) && docker rm $(docker ps -aq)",
    "docker:reset": "docker stop $(docker ps -aq) && docker rm $(docker ps -aq) && docker rmi $(docker images -q) && docker volume rm $(docker volume ls -q)",
    "docker:dev": "npm run docker:stop && docker compose -f docker-compose.dev.yml up --build",
    "docker:dev-reset": "npm run docker:reset && docker compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepaktomar2031/globe-access-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deepaktomar2031/globe-access-api/issues"
  },
  "homepage": "https://github.com/deepaktomar2031/globe-access-api#readme",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/koa": "^2.15.0",
    "@types/koa__multer": "^2.0.7",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-passport": "^6.0.3",
    "@types/koa2-cors": "^2.0.5",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "lodash": "^4.17.21",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "dependencies": {
    "@koa/multer": "^3.0.2",
    "@koa/router": "^13.1.0",
    "axios": "^1.7.9",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.4.7",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-passport": "^6.0.0",
    "koa2-cors": "^2.0.6",
    "module-alias": "^2.2.3",
    "mongodb": "^6.12.0",
    "routing-controllers": "^0.10.4",
    "tsconfig-paths": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
